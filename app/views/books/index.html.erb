<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(:id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <div class="row"></div>
        <h2 class="mt-3">New book</h2>
        <form action="/books" accept-charset="UTF-8" method="post"></form>
      </div>
      <div class="col-md-8 offset-md-1"></div>
    </div>
  </div>
</main>